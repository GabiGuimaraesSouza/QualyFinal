@page
@model IndexModel
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = "Aplicativo Qualyteam";
}

<div class="text-center">
    <h1 class="display-4">Cadastro de Documentos</h1>
    <br />
    <br />

    <form method="post" enctype="multipart/form-data" asp-page="Index">
        <div class="container text-center w-75">
            <div class="row">
                <div class="col text-start">
                    <b>Código do Documento:</b><br /> <input type="number" class="form-control" placeholder="Digite o código" id="codigo" asp-for="Codigo" />
                </div>
                <div class="col text-start">
                    <b>Título:</b> <br /><input type="text" class="form-control" placeholder="Digite o Título" id="titulo" asp-for="Titulo" />
                </div>
                <div class="col text-start">
                    <b>Processo:</b><br />
                    <select class="form-select" name="ProcessoSelecionado" asp-items="Model.Processos">
                    </select>
                </div>
            </div>
            <div class="row mt-2 align-items-center">
                <div class="col text-start">
                    <b>Categoria:</b> <br /><input type="text" class="form-control" placeholder="Digite a Categoria" id="categoria" asp-for="Categoria" />
                </div>
                <div class="col text-start">
                    <b>Arquivo:</b> <br /><input type="file" asp-for="Arquivo" />
                </div>
                <div class="col text-start">
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <input type="submit" class="btn btn-primary btn-lg"/>
                    </div>
                </div>
            </div>
            <br />
            <span asp-validation-for="Codigo" class="text-danger d-block"></span>
            <span asp-validation-for="Titulo" class="text-danger d-block"></span>
            <span asp-validation-for="ProcessoSelecionado" class="text-danger d-block"></span>
            <span asp-validation-for="Categoria" class="text-danger d-block"></span>
            <span asp-validation-for="Arquivo" class="text-danger d-block"></span>
            @{
                if (!String.IsNullOrEmpty(Model.MensagemErro))
                {
                    <div class="alert alert-danger d-block">@Model.MensagemErro</div>
                }
            }
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Título</th>
                <th scope="col">Processo</th>
                <th scope="col">Categoria</th>
                <th scope="col">Arquivo</th>
                <th scope="col">&nbsp;</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var documento in Model.Documentos)
            {
                <tr>
                    <th scope="row">@documento.Id</th>
                    <td>@documento.Titulo</td>
                    <td>@documento.Processo</td>
                    <td>@documento.Categoria</td>
                    <td>ver arquivo</td>
                    <td>
                        <a href="#" class="btn btn-danger disabled" tabindex="-1" role="button" aria-disabled="true">Excluir</a>
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary disabled" tabindex="-1" role="button" aria-disabled="true">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
